{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": false	//开启下拉刷新
			}
		},
		{
			"path" : "pages/classification/index",
			"style" : {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}
		},
		{
			"path" : "pages/shoppingCart/index",
			"style" : {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}
		},
		{
			"path" : "pages/main/index",
			"style" : {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}
		},
		{
			"path" : "pages/pdc-detail/index",
			"style" : {
				"navigationBarTitleText": "详情页",
				"enablePullDownRefresh": false
			}
		}
  ],
	"globalStyle": {
		"navigationStyle": "custom"
	},
	"uniIdRouter": {},
	"easycom": {
	  "autoscan": true,
		"custom": {
			"^x-(.*)": "@/components/x-$1/index.vue" // 匹配components目录内的vue文件
		}
	},
	"tabBar": {
		"height": "0",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": ""
			},
			{
				"pagePath" : "pages/classification/index",
				"text": ""
			},
			{
				"pagePath" : "pages/shoppingCart/index",
				"text": ""
			},
			{
				"pagePath" : "pages/main/index",
				"text": ""
			}
		]
	}
}
